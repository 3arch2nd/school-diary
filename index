    <script>
        let currentMode = 'subject';
        let selectedStudentId = null;
        let viewTabMode = 'subject';

        const students = [
            { id: 1, name: "김철수", sub: [{date:"3/2", txt:"발표 목소리가 큼"}], beh: [{date:"3/2", txt:"질서 잘 지킴"}] },
            { id: 2, name: "이영희", sub: [{date:"3/2", txt:"경청 태도 우수"}], beh: [] },
            { id: 3, name: "박민수", sub: [], beh: [] },
            { id: 4, name: "최수진", sub: [], beh: [] },
            { id: 5, name: "정다은", sub: [], beh: [] }
        ];

        window.onload = () => {
            document.getElementById('rDate').valueAsDate = new Date();
            renderRecordList();
            renderStudentNav();
        };

        function showSection(id) {
            document.querySelectorAll('.section').forEach(el => el.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            event.currentTarget.classList.add('active');
        }

        function setMode(mode) {
            currentMode = mode;
            document.getElementById('btnSubject').className = mode === 'subject' ? 'btn-sm active' : 'btn-sm inactive';
            document.getElementById('btnBehavior').className = mode === 'behavior' ? 'btn-sm active' : 'btn-sm inactive';
            document.getElementById('subjectArea').style.display = mode === 'subject' ? 'block' : 'none';
            document.getElementById('checkHeader').style.visibility = mode === 'subject' ? 'visible' : 'hidden';
            renderRecordList();
        }

        function openSubjectModal() {
            document.getElementById('newSubjectName').value = '';
            document.getElementById('subjectModal').classList.add('open');
            document.getElementById('newSubjectName').focus();
        }
        function closeSubjectModal() { document.getElementById('subjectModal').classList.remove('open'); }
        function confirmAddSubject() {
            const name = document.getElementById('newSubjectName').value;
            if(name) {
                const container = document.getElementById('subjectTags');
                const addBtn = container.querySelector('.tag-add');
                const newTag = document.createElement('div');
                newTag.className = 'tag selected';
                newTag.innerText = name;
                newTag.onclick = function() { selSub(this); };
                container.querySelectorAll('.tag').forEach(t => t.classList.remove('selected'));
                container.insertBefore(newTag, addBtn);
            }
            closeSubjectModal();
        }
        document.getElementById('newSubjectName').addEventListener('keyup', function(e) { if(e.key === 'Enter') confirmAddSubject(); });

        function renderRecordList() {
            const list = document.getElementById('recordList');
            list.innerHTML = '';
            students.forEach(st => {
                const row = document.createElement('div');
                row.className = 'student-row';
                let checkHtml = '';
                if(currentMode === 'subject') {
                    checkHtml = `
                        <div class="st-check-group">
                            <div class="check-circle" onclick="toggleCheck(this)"></div>
                            <div class="check-circle" onclick="toggleCheck(this)"></div>
                            <div class="check-circle" onclick="toggleCheck(this)"></div>
                            <div class="check-circle" onclick="toggleCheck(this)"></div>
                        </div>`;
                }
                row.innerHTML = `
                    <div class="st-name">${st.id}. ${st.name}</div>
                    <input type="text" class="st-input" placeholder="${currentMode==='subject'?'특기사항':'관찰내용'}">
                    ${checkHtml}`;
                list.appendChild(row);
            });
        }

        function toggleCheck(el) {
            const p = el.parentElement;
            const wasChecked = el.classList.contains('checked');
            p.querySelectorAll('.check-circle').forEach(c => c.classList.remove('checked'));
            if(!wasChecked) el.classList.add('checked');
        }
        function selSub(el) { document.querySelectorAll('.tag').forEach(t => t.classList.remove('selected')); el.classList.add('selected'); }
        function saveData() { const msg = document.getElementById('aiToggle').checked ? "AI 보완 저장" : "저장 완료"; alert(msg); }

        function renderStudentNav() {
            const list = document.getElementById('studentNavList');
            list.innerHTML = '';
            students.forEach(st => {
                const item = document.createElement('div');
                item.className = 'student-list-item';
                item.onclick = () => selectStudent(st.id, item);
                item.innerHTML = `<span>${st.id}번 <b>${st.name}</b></span> <span>></span>`;
                list.appendChild(item);
            });
        }

        function selectStudent(id, el) {
            selectedStudentId = id;
            document.querySelectorAll('.student-list-item').forEach(i => i.classList.remove('active'));
            el.classList.add('active');
            updateViewer();
        }

        function viewTab(mode) {
            viewTabMode = mode;
            document.getElementById('viewSubBtn').className = mode === 'subject' ? 'btn-sm active' : 'btn-sm inactive';
            document.getElementById('viewBehBtn').className = mode === 'behavior' ? 'btn-sm active' : 'btn-sm inactive';
            updateViewer();
        }

        // [수정] 기록 수정 가능한 뷰어
        function updateViewer() {
            const container = document.getElementById('historyViewer');
            if(!selectedStudentId) return;
            const st = students.find(s => s.id === selectedStudentId);
            document.getElementById('viewerTitle').innerText = `${st.name} 학생의 기록`;
            const data = viewTabMode === 'subject' ? st.sub : st.beh;
            
            if(data.length === 0) {
                container.innerHTML = `<div style="text-align:center; color:var(--text-sub); padding:50px 0;">기록이 없습니다.</div>`;
                return;
            }
            container.innerHTML = '';
            data.forEach((item, index) => {
                const card = document.createElement('div');
                card.className = 'history-card';
                // ID 생성: 학생ID_타입_인덱스
                const inputId = `hist_${selectedStudentId}_${viewTabMode}_${index}`;
                
                card.innerHTML = `
                    <div class="h-date">${item.date}</div>
                    <textarea id="${inputId}" class="h-textarea">${item.txt}</textarea>
                    <div class="h-btn-area">
                        <button class="btn-copy" onclick="quietCopy(this, document.getElementById('${inputId}').value)">복사</button>
                    </div>`;
                container.appendChild(card);
            });
        }

        function toggleNeisType() {
            const t = document.getElementById('neisType').value;
            document.getElementById('neisSubOption').style.display = t==='subject'?'block':'none';
            document.getElementById('neisBehOption').style.display = t==='behavior'?'block':'none';
        }

        function generateNeisCards() {
            const container = document.getElementById('neisResultList');
            container.innerHTML = '';
            const type = document.getElementById('neisType').value;
            const sampleText = type === 'subject' ? "청자의 상감 기법을 탐구하여 우리 문화재의 가치를 재발견함." : "타인이 어려움에 처한 상황을 목격할 경우 이를 지나치지 않고 도움.";

            students.forEach(st => {
                const card = document.createElement('div');
                card.className = 'neis-result-card';
                card.innerHTML = `
                    <div class="n-name">${st.id}번 ${st.name}</div>
                    <textarea id="txt_${st.id}" class="n-textarea">${sampleText}</textarea>
                    <div class="n-btn-area">
                        <button class="btn-copy" onclick="quietCopy(this, document.getElementById('txt_${st.id}').value)">복사</button>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function quietCopy(btn, text) {
            navigator.clipboard.writeText(text).then(() => {
                const org = btn.innerText;
                btn.innerText = "복사됨";
                btn.classList.add('copied');
                setTimeout(()=> { btn.innerText = org; btn.classList.remove('copied'); }, 1000);
            });
        }
    </script>
</body>
</html>
